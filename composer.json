{
  "name": "longczx/home-guardian",
  "type": "project",
  "keywords": [
    "iot",
    "smart home",
    "mqtt",
    "webman"
  ],
  "license": "MIT",
  "description": "Home Guardian - A private, high-performance home IoT management platform.",
  "require": {
    "php": ">=8.2",
    "workerman/webman-framework": "^2.1",
    "monolog/monolog": "^2.0",
    "illuminate/database": "^11.0",
    "illuminate/pagination": "^11.47",
    "illuminate/events": "^11.47",
    "illuminate/redis": "^11.0",
    "vlucas/phpdotenv": "^5.6",
    "firebase/php-jwt": "^7.0",
    "workerman/mqtt": "^1.0",
    "symfony/cache": "^7.0",
    "webman/database": "^2.1",
    "symfony/var-dumper": "^8.0",
    "topthink/think-template": "^3.0"
  },
  "suggest": {
    "ext-event": "For better performance."
  },
  "autoload": {
    "psr-4": {
      "": "./",
      "app\\": "./app",
      "App\\": "./app",
      "app\\View\\Components\\": "./app/view/components"
    }
  },
  "scripts": {
    "post-package-install": [
      "support\\Plugin::install"
    ],
    "post-package-update": [
      "support\\Plugin::install"
    ],
    "pre-package-uninstall": [
      "support\\Plugin::uninstall"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
