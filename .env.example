# ============================================================
# Home Guardian 环境变量配置
# 使用前请复制此文件：cp .env.example .env
# ============================================================

# ---------- PostgreSQL ----------
# DB_HOST: Docker 内部服务名为 postgres，本地开发时改为 127.0.0.1
DB_HOST=postgres
POSTGRES_USER=guardian_user
POSTGRES_PASSWORD=your_strong_db_password_here
POSTGRES_DB=home_guardian_db
POSTGRES_PORT=5432

# ---------- Redis ----------
# REDIS_HOST: Docker 内部服务名为 redis，本地开发时改为 127.0.0.1
REDIS_HOST=redis
REDIS_PASSWORD=your_strong_redis_password_here
REDIS_PORT=6379

# ---------- Nginx ----------
HTTP_PORT=80
# HTTPS_PORT=443

# ---------- MQTT (EMQX) ----------
# MQTT_HOST: Docker 内部服务名为 emqx
MQTT_HOST=emqx
MQTT_PORT=1883
# Webman 内部 MQTT 客户端的超级用户凭证
MQTT_SUPER_USERNAME=hg_internal_client
MQTT_SUPER_PASSWORD=your_strong_mqtt_password_here

# ---------- JWT ----------
# 请使用 openssl rand -base64 64 生成强密钥
JWT_SECRET=your_jwt_secret_key_here
# access_token 有效期（秒），默认 2 小时
JWT_ACCESS_TTL=7200
# refresh_token 有效期（秒），默认 30 天
JWT_REFRESH_TTL=2592000

# ---------- App ----------
# 调试模式，生产环境务必设为 false
APP_DEBUG=true
